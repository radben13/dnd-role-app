<div class="role-display">
<div class="role-header">
  <div>
    <div class="value-header">Character Name</div>
    <p><%= @role.name %></p>
  </div>
  
  <div>
    <div class="value-header">Class</div>
    <p><%= @role.role_type.titleize %></p>
  </div>
  
  <div>
    <div class="value-header">Race</div>
    <p><%= @role.race.titleize %></p>
  </div>
</div>
<div class="detail-row">
  <%= render :partial => "description" %>
</div>
<div class="detail-row">
  <%= render :partial => "roles/attributes/show" %>
</div>
</div>
<%= link_to 'Delete', role_path(@role), :method => :delete, :data => {confirm: "Are you sure you wish to delete this role?"} %> |
<%= link_to 'Edit', edit_role_path(@role) %>
